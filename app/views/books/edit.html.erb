<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
  <% if @book.errors.any? %>
     <div id="error_explanation">
       <h2>
         <%= pluralize(@book.errors.count, "error") %> prohibited
         this article from being saved:
       </h2>
       <ul>
         <% @book.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>
<% end %>
<%= link_to "show", book_path(@book.id) %>
